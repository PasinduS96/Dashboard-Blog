<div class="row" style="margin-bottom:10px;">
<div class="col-md-9 mx-auto">
<div class="card">
<div class="card-body">
    <h1 class="text-center">Account Register</h1>
    <img src="/img/logo_transparent.png" alt="logo" style="display: block;margin-left: auto;margin-right: auto;width: 50%">
    <form action="/users/register" method="POST">
    <div class="container" style="display: block;margin-left: auto;margin-right: auto;width: 100%">
    <div class="form-row">
        <div class="col-md-7 mb-3">
        <label for="name">Cusromer Name</label>
        <input type="text" class="form-control" placeholder="Customer Name"  name="name" value="{{name}}" required>
         <div class="invalid-feedback">
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-7 mb-3">
        <label for="email">Email Address</label>
        <input type="email" class="form-control" name="email" placeholder="example@example.com" value="{{email}}" required>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-5 mb-3">
        <label for="nic">National Identity Card(NIC) Number</label>
        <input type="text" class="form-control" name="nic" placeholder="909090900V" value="{{nic}}" required>
        </div>
        <div class="col-md-5 mb-3 mx-4">
        <label for="phone">Phone Nummber</label>
        <input type="text" class="form-control" name="phone" placeholder="hone" value="{{phone}}" required>
        </div>
        </div>
        <div class="form-row">
        <div class="col-md-6 mb-3">
            <label class="my-1 mr-2" for="gender">Gender</label>
            <select class="custom-select my-1 mr-sm-2" name="gender">
                <option selected>Choose...</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        </div>

        <div class="row">
        <div class="col-md-5 mb-3">
        <label class="my-1 mr-2" for="password">Password</label>
        <input name="password" type="password" class="form-control"  value="{{password}}" required>
        {{#if error2}}
        </br>
        <div class="alert alert-light alert-dismissible" style=" border: 1px solid red;border-radius: 12px;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
             <p class="text-danger">{{error2}}</p>
        </div>
        {{else}}
        {{/if}}
        </div>
        <div class="col-md-5 mb-3 mx-4">
        <label class="my-1 mr-2" for="password2">Confirm Password</label>
        <input name="password2" type="password" class="form-control" value="{{password2}}" required>
        {{#if error1}}
        </br>
        <div class="alert alert-light alert-dismissible" style=" border: 1px solid red;border-radius: 12px;">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
             <p class="text-danger">{{error1}}</p>
        </div>
        {{else}}
        {{/if}}
        </div>
        </div>

        <div class="form-row">
        <div class="col-md-6 mb-3">
            <label class="my-1 mr-2" for="type">Type</label>
            <select class="custom-select my-1 mr-sm-2" name="type">
                <option selected>Choose...</option>
                <option value=true>Goverment Officer</option>
                <option value=false>Other</option>
            </select>
        </div>
        </div>
    <button class="btn btn-primary btn-block" type="submit">Submit form</button>
    </div>
    </form>
</div>
</div>
</div>
</div>

