<div class="row" style="margin-top:10px; margin-bottom:80px">
<div class="col-md-9 mx-auto">
<div class="card">
<div class="card-body">
    <h1 class="text-center">Account Login</h1>
    <img src="/img/log.svg" alt="logo" style="display: block;margin-left: auto;margin-right: auto;width: 20%; margin-top: 40px; margin-bottom: 20px;">
    <form action="/user/login" method="POST">
    <div class="form-row mb-4">
        <label for="email">Email Address</label>
        <input type="text" class="form-control" name="email" placeholder="email@test.com"  required>
    </div>

    <div class="form-row mb-4">
        <label for="password">Password</label>
        <input type="password" class="form-control" placeholder="Password"  name="password" required>
    </div>
    <button type="submit" class="btn btn-success btn-block">Login To Dashboard</button>
    </form>
</div>

</div>
</div>
</div>